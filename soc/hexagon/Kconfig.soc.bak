choice
	prompt "Hexagon SoC Selection"
	depends on HEXAGON

config SOC_HEXAGON_V66
	bool "Hexagon V66 Generic SoC"
	select HEXAGON
	select HEXAGON_HAS_V66
	select SOC_FAMILY_HEXAGON

config SOC_HEXAGON_V65
	bool "Hexagon V65 Generic SoC"
	select HEXAGON
	select HEXAGON_HAS_V65
	select SOC_FAMILY_HEXAGON

config SOC_HEXAGON_V60
	bool "Hexagon V60 Generic SoC"
	select HEXAGON
	select HEXAGON_HAS_V60
	select SOC_FAMILY_HEXAGON

endchoice

config SOC_SERIES
	string
	default "hexagon" if SOC_FAMILY_HEXAGON

config SOC
	string
	default "hexagon_v66" if SOC_HEXAGON_V66
	default "hexagon_v65" if SOC_HEXAGON_V65
	default "hexagon_v60" if SOC_HEXAGON_V60
